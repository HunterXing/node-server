{
  "env": {
    "node"   : true
  },
  "rules": {
    "semi": ["error", "always"],
    "no-extra-boolean-cast": 1,
    "no-extra-semi"        : 1,
    "no-extra-parens"      : 1,
    "no-empty"             : 1,
    "no-use-before-define" : [
      1,
      "nofunc"
    ],
    "complexity": [
      1,
      10
    ],
    "comma-dangle": [
      2,
      "never"
    ],
    "no-debugger"               : 2,
    "no-constant-condition"     : 2,
    "no-dupe-args"              : 2,
    "no-dupe-keys"              : 2,
    "no-duplicate-case"         : 2,
    "no-empty-character-class"  : 2,
    "no-invalid-regexp"         : 2,
    "no-func-assign"            : 2,
    "valid-typeof"              : 2,
    "no-unreachable"            : 2,
    "no-unexpected-multiline"   : 2,
    "no-shadow-restricted-names": 2,
    "no-unused-vars"            : 2,
    "no-cond-assign"            : 2,
    "no-native-reassign"        : 2,
    "no-else-return" : 1,
    "no-multi-spaces": 1,
    "key-spacing"    : [
      1,
      {
        "beforeColon": false,
        "afterColon" : false
      }
    ],
    "block-scoped-var" : 2,
    "consistent-return": 2,
    "accessor-pairs"   : 2,
    "dot-location"     : [
      2,
      "property"
    ],
    "no-lone-blocks"     : 2,
    "no-empty-label"     : 0,
    "no-extend-native"   : 2,
    "no-floating-decimal": 2,
    "no-loop-func"       : 2,
    "no-new-func"        : 2,
    "no-self-compare"    : 2,
    "no-sequences"       : 2,
    "no-throw-literal"   : 2,
    "no-return-assign"   : [
      2,
      "always"
    ],
    "no-redeclare": [
      2,
      {
        "builtinGlobals": true
      }
    ],
    "no-unused-expressions": [
      2,
      {
        "allowShortCircuit": true,
        "allowTernary"     : true
      }
    ],
    "no-useless-call"    : 2,
    "no-useless-concat"  : 2,
    "no-void"            : 2,
    "no-with"            : 2,
    "curly": 2
  },
  "parser": "esprima",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  }
}
